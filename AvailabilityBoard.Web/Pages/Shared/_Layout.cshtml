@using System.Security.Claims
<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Availability Board</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Availability</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Calendar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Requests/My">My Requests</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Approvals">Approvals</a></li>
                </ul>

                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <span class="navbar-text me-3 text-light">
                        @User.FindFirstValue(ClaimTypes.Name)
                    </span>
                    <a class="btn btn-outline-light btn-sm" href="/Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-outline-light btn-sm" href="/Login">Login</a>
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-3">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

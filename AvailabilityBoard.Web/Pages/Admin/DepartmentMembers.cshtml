@page
@model AvailabilityBoard.Web.Pages.Admin.DepartmentMembersModel
@{
    ViewData["Title"] = "Department Members";
}

<div class="container-fluid">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-0">Department Members</h2>
            <div class="text-muted small">
                @Model.Department?.Name (@Model.DepartmentId)
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/Admin/Departments">Back</a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <input id="empFilter" class="form-control" placeholder="Search employee..." />
            <div class="text-muted small mt-2">
                Tip: γράψε 2-3 γράμματα για να φιλτράρεις live.
            </div>
        </div>
    </div>

    <form method="post" asp-page-handler="Save">
        <input type="hidden" name="DepartmentId" value="@Model.DepartmentId" />

        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <strong>Employees</strong>
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </div>

            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:60px;">In</th>
                            <th>Name</th>
                            <th style="width:120px;">EmployeeId</th>
                            <th style="width:220px;">Department (AD)</th>
                        </tr>
                    </thead>
                    <tbody id="empRows">
                        @foreach (var e in Model.Employees)
                        {
                            var checkedAttr = Model.SelectedEmployeeIds.Contains(e.EmployeeId);
                            <tr class="emp-row">
                                <td>
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="MemberEmployeeIds"
                                           value="@e.EmployeeId"
                                           @(checkedAttr ? "checked" : null) />
                                </td>
                                <td class="emp-name">
                                    <div class="fw-semibold">@e.DisplayName</div>
                                    @if (!string.IsNullOrWhiteSpace(e.Email))
                                    {
                                        <div class="text-muted small">@e.Email</div>
                                    }
                                </td>
                                <td>
                                    <code>@e.EmployeeId</code>
                                </td>
                                <td class="text-muted small">
                                    @if (e.DepartmentId.HasValue)
                                    {
                                        <span>DeptId=@e.DepartmentId</span>
                                    }
                                    else
                                    {
                                        <span>—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-body border-top d-flex align-items-center justify-content-between">
                <div class="text-muted small">
                    Οι επιλογές αποθηκεύονται ως overrides (δεν πειράζει το AD sync).
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
            </div>
        </div>
    </form>
</div>

<script>
    (function() {
      const input = document.getElementById('empFilter');
      const rows = Array.from(document.querySelectorAll('#empRows tr.emp-row'));
      input.addEventListener('input', function() {
        const q = (input.value || '').toLowerCase().trim();
        for (const r of rows) {
          const name = (r.querySelector('.emp-name')?.innerText || '').toLowerCase();
          r.style.display = (!q || name.includes(q)) ? '' : 'none';
        }
      });
    })();
</script>